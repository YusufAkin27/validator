<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.decard.exampleSrc">

    <uses-permission android:name="android.permission.SET_TIME"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- NFC Ä°zinleri -->
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Decard.Application"
        android:exported="true">
        <activity
            android:name=".ui.CreateApplicationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.CreateFileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.PersonalizeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.FormatPiccActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SetupTestEnvironmentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SetupLightEnvironmentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.DesfireMainActivity"
            android:exported="false" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>